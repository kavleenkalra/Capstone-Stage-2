<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upcoming_events_card_view"
    android:layout_width="200dp"
    android:layout_height="200dp"
    card_view:cardElevation="@dimen/card_view_elevation"
    card_view:cardCornerRadius="@dimen/card_view_corner_radius"
    android:layout_marginStart="@dimen/margin_left"
    android:layout_marginLeft="@dimen/margin_left"
    android:layout_marginTop="@dimen/margin_top">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ProgressBar
            android:id="@+id/upcoming_event_progress_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/upcoming_events_image_view"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/event_image_scrim"/>

        <TextView
            android:id="@+id/upcoming_events_name_view"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="normal"
            android:textSize="15sp"/>

    </FrameLayout>
</android.support.v7.widget.CardView>