<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="end|bottom"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.CardView
        android:id="@+id/fab_sheet"
        android:layout_width="@dimen/fab_sheet_width"
        android:layout_height="@dimen/fab_sheet_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/category_view"
                style="@style/fab_element_linear_layout_style"
                android:contentDescription="@string/categories">

                <ImageView
                    android:src="@drawable/category_24"
                    style="@style/fab_material_sheet_image_view_style"/>

                <TextView
                    android:text="@string/categories"
                    style="@style/fab_material_sheet_text_view_style"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/favorite_view"
                style="@style/fab_element_linear_layout_style"
                android:contentDescription="@string/favourites">

                <ImageView
                    android:src="@drawable/ic_favorite_black_24dp"
                    style="@style/fab_material_sheet_image_view_style"/>

                <TextView
                    android:text="@string/favourites"
                    style="@style/fab_material_sheet_text_view_style"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</io.codetail.widget.RevealLinearLayout>